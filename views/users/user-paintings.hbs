<h2>{{user.username}}'s paintings</h2>
 
 {{#each user.paintings}}
    <div class="col-md-4 mb-5">
        <div class="card" style="width: 18rem;">
            <img src="{{this.imageUrl}}" alt="{{this.title}}">
            <div class="card-body">
                {{!-- {{#each this.author}}
                <h5>by: {{this.username}}</h5>
                {{/each}} --}}
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.year}}</p>
                <a href="/paintings/{{this._id}}">Details</a>
            </div>
        </div>
    </div>
{{else}}
    <p>No paintings yet</p>
{{/each}}

<a href="/users-list">Back</a>